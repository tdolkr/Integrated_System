{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Book",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the book"
    },
    "author": {
      "type": "string",
      "description": "The author of the book"
    },
    "genre": {
      "type": "string",
      "description": "Genre of the book"
    }
  },
  "required": ["title", "author", "genre"]
}